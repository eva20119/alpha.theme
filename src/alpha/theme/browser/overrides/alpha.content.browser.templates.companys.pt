<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="alpha.theme">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<div class="map" style="height: 700px;">
  <a style="position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_bg.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_Africa.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_Asia.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_Middle-East.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_North-America.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_South-America.png "></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_South-Pacific.png"></a>
  <a style="display:none; position:absolute;top:0;left:0;top:0" href="javascript:void(0)"><img style="width:1800px" src="${portal_url}/++theme++alpha.theme/img/map/map_Europe.png"></a>
</div>

<div class="col-lg-6 col-xs-12" tal:repeat="data view/companyBrains" style='padding: 0 7.5px 0 7.5px; margin-bottom: 10px'>
  <tal:define define="obj python:data.getObject()">
    <div class="col-lg-6 col-xs-6" 
     style="background-image:url(${python: '%s/@@images/image' %obj.absolute_url()});background-position: center;
	background-repeat: no-repeat;height: 250px;"></div>
    <div class="col-lg-6 col-xs-6" style='background:black; position: relative;height:250px'>
      <p style='font-size:23px;color:white;padding: 5px 8px'>${python: obj.title}</p>
      <p style='font-size:18px;color:white;padding: 5px'>${python: obj.description}</p>
      <p style='position: absolute; bottom:0;color:yellow;font-size: 18px; padding: 5px;margin:0'>${python: obj.image_caption}</p>
    </div>

  </tal:define>
</div>

</metal:content-core>
</metal:content-core>

</body>
</html>

