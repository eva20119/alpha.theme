<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gct.content">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

    <div class="product-details-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
            <div class="flexslider">
              <ul class="slides">
		<tal:repeat repeat="item view/getImg">
		<tal:define define="number repeat/item/number">
                  <li data-thumb="${python: item.getObject().absolute_url()}/@@images/image/preview">
                    <img src="${python: item.getObject().absolute_url()}/@@images/image/preview" />
                  </li>
		</tal:define>
		</tal:repeat>
              </ul>
            </div>
          </div>
          <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
            <div class="product-info-main">
	      <span>${view/context/productNo}</span>
              <div class="page-title">
                <h1>${view/context/title}</h1>
              </div>
              <div class="product-info-price">
                <div class="price-final product-price">
                  <span tal:condition="not: view/context/salePrice">$${view/context/price}</span>
		  <ul tal:condition="view/context/salePrice">
		    <li class="new-price sale" style="font-size:30px">$${view/context/salePrice}</li>
                    <li class="old-price">$${view/context/price}</li>
	          </ul>
                </div>
              </div>
              <div class="short_description_block">
                <p>${context/description}</p>
              </div>
              <div class="product-add-form">
                <form action="#">
                  <div class="quality-button">
                    <label>Qty</label>
                    <input class="qty" type="number" value="1">
                  </div>
                </form>
              </div>
	  
              <div class="box-cart-bottom">
                <div class="add_to_cart">
                  <a href="#">Add to cart</a>
                </div>
                <div class="add-to-links-2">
                  <ul>
                    <li><a href="#"><i class="fa fa-refresh"></i></a></li>
                    <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                  </ul>
                </div>
              </div>
	      <div class="product_detail">
	        <p>Brand: <span>${view/context/brand}</span></p>
		<p>Product Code: <span>${view/context/productCode}</span></p>
	        <p>Availability: 
		   <tal:switch switch="view/context/availability">
			<span tal:case="True">In Stock</span>
			<span tal:case="False">Out Of Stock</span>
		   </tal:switch>
		</p>
	      </div>
	      <div style="border-top: 1px solid #f2f2f2">
	        <h3 style="font-weight: 700">DOWNLOAD</h3>
		<a href="${python: view.context.absolute_url()}/@@download/downloadFile">
		 ${python: view.context.downloadFile.filename}
		</a>
              </div>

              <div class="socialsharing_product">
                <span>share</span>
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-google-plus"></i></a>
                <a href="#"><i class="fa fa-pinterest-p"></i></a>
              </div>
            </div>
          </div>
        </div>  
      </div>
    </div>

    <div class="more-info-area pt-50">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <!-- tab-menu-start -->
            <div class="tab-menu mb-40 text-center ">
              <ul>
                <li class="active"><a href="#More" data-toggle="tab">FEATURE </a></li>
                <li><a href="#Data"  data-toggle="tab">SPECIFICATION</a></li>
                <li><a href="#Reviews" data-toggle="tab">REVIEW</a></li>
              </ul>
