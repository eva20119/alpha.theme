<div class="pos_new_product pt-50">
  <div class="container">

    <!--tab title-->
    <div class="row">
      <div class="col-lg-12">
        <!-- tab-menu-start -->
        <div class="tab-menu mb-40 text-center ">
          <ul>
            <li class="active"><a href="#products" data-toggle="tab">New products </a></li>
            <li><a href="#OnSale"  data-toggle="tab">OnSale</a></li>
            <li><a href="#Bestseller" data-toggle="tab">Bestseller</a></li>
          </ul>
        </div>
        <!-- tab-menu-end -->
      </div>
    </div>

    <!-- tab-area-start -->
    <div class="tab-content">
      <div class="tab-pane active" id="products">
        <div class="row">   
          <div class="product-active">
            <!-- single-product-start -->
            <tal:repeat repeat="item view/getMostView">
              <tal:define define="obj item/getObject;
                                  item_title item/Title;
                                  item_url item/getURL;
                                  item_price obj/price;
                                  item_sale  obj/salePrice;
                                  is_has_item_sale python: item_sale!=None">
                <div class="single-product">
                  <div class="product-img">
                    <a href="${item_url}" >
                      <img src="${item_url}/@@images/cover/preview" alt="product" class="first" />
                    </a>
                  </div>
                  <div class="product-content">
                    <h3><a href="${item_url}">${item_title}</a></h3>
                    <div class="product-price">
                      <ul>
                        <li tal:condition="is_has_item_sale" class="new-price sale">${item_sale}</li>
                        <li class="old-price">${item_price}</li>
                      </ul>
                    </div>
                    <div class="add-to-links mt-15">
                      <ul>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        <li><a href="#"><i class="fa fa-refresh"></i></a></li>
                        <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                        <li><a href="#" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-eye"></i></a></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </tal:define>
            </tal:repeat>
            <!-- single-product-end -->
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="OnSale">
        <div class="row">   
          <div class="product-active">
            <!-- single-product-start -->
            <tal:repeat repeat="item view/getSpecial">
              <tal:define define="obj item/getObject;
                                  item_title item/Title;
                                  item_url item/getURL;
                                  item_price obj/price;
                                  item_sale  obj/salePrice;
                                  is_has_item_sale python: item_sale!=None">
                <div class="single-product">
                  <div class="product-img">
                    <a href="${item_url}" >
                      <img src="${item_url}/@@images/cover/preview" alt="product" class="first" />
                    </a>
                  </div>
                  <div class="product-content">
                    <h3><a href="${item_url}">${item_title}</a></h3>
                    <div class="product-price">
                      <ul>
                        <li tal:condition="is_has_item_sale" class="new-price sale">${item_sale}</li>
                        <li class="old-price">${item_price}</li>
                      </ul>
                    </div>
                    <div class="add-to-links mt-15">
                      <ul>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        <li><a href="#"><i class="fa fa-refresh"></i></a></li>
                        <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                        <li><a href="#" data-toggle="modal" data-target="#mymodal"><i class="fa fa-eye"></i></a></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </tal:define>
            </tal:repeat>
            <!-- single-product-end -->
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="Bestseller">
        <div class="row">   
          <div class="product-active">
            <!-- single-product-start -->
            <tal:repeat repeat="item view/getLatest">
              <tal:define define="obj item/getObject;
                                  item_title item/Title;
                                  item_url item/getURL;
                                  item_price obj/price;
                                  item_sale  obj/salePrice;
                                  is_has_item_sale python: item_sale!=None">
                <div class="single-product">
                  <div class="product-img">
                    <a href="${item_url}" >
                      <img src="${item_url}/@@images/cover/preview" alt="product" class="first" />
                    </a>
                  </div>
                  <div class="product-content">
                    <h3><a href="${item_url}">${item_title}</a></h3>
                    <div class="product-price">
                      <ul>
                        <li tal:condition="is_has_item_sale" class="new-price sale">${item_sale}</li>
                        <li class="old-price">${item_price}</li>
                      </ul>
                    </div>
                    <div class="add-to-links mt-15">
                      <ul>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        <li><a href="#"><i class="fa fa-refresh"></i></a></li>
                        <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                        <li><a href="#" data-toggle="modal" data-target="#mymodal"><i class="fa fa-eye"></i></a></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </tal:define>
            </tal:repeat>
            <!-- single-product-end -->
          </div>
        </div>
      </div>
    </div>
    <!-- tab-area-end -->
  </div>
</div>
